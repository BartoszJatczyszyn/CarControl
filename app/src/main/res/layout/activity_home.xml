<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@color/teal_200">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:text="Główna"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_bluetooth"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:backgroundTint="@color/teal_200"
            android:drawableLeft="@drawable/ic_bluetooth" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:backgroundTint="@color/teal_200"
            android:drawableLeft="@drawable/ic_logout"/>


    </RelativeLayout>

    <Button
        android:id="@+id/btn_windows"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#00320B"
        android:text="Szyby"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_locks"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="220dp"
        android:backgroundTint="#6E0000"
        android:text="Zamki"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_lights"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#78583C"
        android:text="Światła"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_others"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="220dp"
        android:backgroundTint="#123873"
        android:text="Inne"
        android:textColor="@color/white"
        android:textSize="20sp"/>



</RelativeLayout>